<% layout("/layouts/boilerplate") %>
<div class="container d-flex justify-content-center align-items-start min-vh-100 pt-5">
  <div class="mx-auto w-100" style="max-width: 500px;">
    <div class="card shadow-sm">

      <img src="https://images.unsplash.com/photo-1533575770077-052fa2c609fc?q=80&w=3540&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        class="card-img-top" alt="로그인 이미지">

      <div class="card-body p-4">
        <h4 class="mb-4 text-center">로그인</h4>
        <form action="/login" method="POST" novalidate class="validated-form">
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">Looks good</div>
          </div>

          <!-- 버튼 컨테이너를 폼과 동일 너비로 맞춤 -->
          <div>
            <button class="btn btn-success w-100">Login</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
